@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div class="home">
    <section class="hero is-dark">
        <div class="hero-body">
            <div class="container">
                <h1 class="title">
                    Welcome to the Animal Rescue League
                </h1>
                <h2 class="subtitle">
                    Make sure you check out our upcoming events below
                </h2>
                <div class="button-block">
                    @if (User.Identity.IsAuthenticated)
                    {
                        <h3 class="is-size-3 has-background-dark welcome">Welcome, @User.Identity.Name!</h3>
                    }
                    else
                    {
                        <a asp-page="/Login" class="button is-xl is-dark">Sign Up to Browse Events</a>
                    }

                </div>
            </div>
        </div>
    </section>
    @if (User.Identity.IsAuthenticated)
    {
        <partial name="_EventsList" model="Model.Events" />
    }
</div>

@section Styles {
    <style>
        .hero {
            text-align: center;
            background-image: url('https://cdn.auth0.com/blog/vue-meetup/event-banner.png');
            background-size: cover;
            background-position: center;
            background-repeat: no-repeat;
            height: 400px;
        }

        .hero-body .title {
            text-shadow: 4px 4px 4px rgba(0, 0, 0, 0.6);
            padding: 40px 0 20px 0;
            font-size: 60px;
        }

        .subtitle {
            text-shadow: 4px 4px 4px rgba(0, 0, 0, 0.7);
            font-size: 30px;
        }

        .button-block {
            text-align: center;
            margin-left: auto;
            margin-right: auto;
            width: 100%;
            position: absolute;
            bottom: -150px;
        }

            .button-block > .button {
                margin-right: 50px;
                padding-left: 50px;
                padding-right: 50px;
            }

            .button-block > .welcome {
                width: 400px;
                padding: 10px;
                margin-left: auto;
                margin-right: auto;
            }

        .is-xl {
            font-size: 1.7rem;
        }

        .events {
            margin-top: 100px;
            text-align: center;
        }

        .card {
            background-image: url('https://placekitten.com/400/400');
            height: 200px;
            background-position: center;
            background-size: cover;
            text-align: center;
        }

        .card-content {
            padding-top: 50px;
            position: absolute;
            color: #FFF;
            background-color: rgba(0, 0, 0, 0.35);
            top: 0;
            padding: 10px;
            height: 200px;
            width: 100%;
        }

            .card-content > span {
                font-size: 18px;
                text-align: center;
                width: 100%;
                position: absolute;
                bottom: 10px;
                right: 0;
            }

            .card-content > h2 {
                margin-top: 10px;
            }

            .card-content > event-date {
                background-color: #151515;
                color: #FFF;
                font-size: .75em;
                padding: 2px 10px;
                position: absolute;
                top: 0;
                right: 0;
            }
    </style>
}