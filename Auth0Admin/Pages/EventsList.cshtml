@page
@model Auth0Admin.Pages.EventsListModel
@{
}

<div class="events container">
    <h2 class="subtitle is-3">
        Check out our upcoming events
    </h2>
    <div class="columns is-multiline">
        @foreach (var eventInfo in Model.Events)
        {
            <div class="column is-one-quarter">
                <partial name="_EventCard" model="eventInfo" />
            </div>
        }
    </div>
</div>

@section Styles {
    <style>
        .events {
            margin-top: 100px;
            text-align: center;
        }

        .card {
            background-image: url('https://placekitten.com/400/400');
            height: 200px;
            background-position: center;
            background-size: cover;
            text-align: center;
        }

        .card-content {
            padding-top: 50px;
            position: absolute;
            color: #FFF;
            background-color: rgba(0, 0, 0, 0.35);
            top: 0;
            padding: 10px;
            height: 200px;
            width: 100%;
        }

            .card-content > span {
                font-size: 18px;
                text-align: center;
                width: 100%;
                position: absolute;
                bottom: 10px;
                right: 0;
            }

            .card-content > h2 {
                margin-top: 10px;
            }

            .card-content > event-date {
                background-color: #151515;
                color: #FFF;
                font-size: .75em;
                padding: 2px 10px;
                position: absolute;
                top: 0;
                right: 0;
            }
    </style>
}